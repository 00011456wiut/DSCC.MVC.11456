@model IEnumerable<DSCC.MVC._11456.Models.Blog>

@{
    ViewData ["Title"] = "Universities Blog";
}

<h1 class="text-center mb-4">Blogs</h1>

@if (!Model.Any())
{
    <div class="alert alert-info" role="alert"> No Blogs </div>
}

else
{
    <div class="container">
        <div class="row">
            @foreach (var blog in Model)

            {
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-header"> Popular Blogs </div>
                        <div class="card-body">
                            <h5 class="card-title">@blog.Title</h5>
                            <p class="card-text">@blog.Content</p>
                            <a href="@Url.Action("Details", "Blog", new { id = blog.Id })" class="btn btn-primary">View Details</a>
                            <form asp-action="Delete" asp-controller="Blog" asp-route-id="@blog.Id" method="post" class="d-inline">
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this blog?');">
                                    Delete
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
}