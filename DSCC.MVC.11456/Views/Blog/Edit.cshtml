@model DSCC.MVC._11456.Models.Blog

@{
    ViewData["Title"] = "Editing " + Model.Title;
}

<h1 class="text-center mb-4">Edit Blog</h1>

<div class="container">
    <form asp-action="Edit" asp-controller="Blog" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="form-group mb-3">
            <label asp-for="Title" class="form-label"></label>
            <input asp-for="Title" class="form-control" required>
        </div>

        <div class="form-group mb-3">
            <label asp-for="CoverImage" class="form-label"></label>
            <textarea asp-for="CoverImage" class="form-control" required></textarea>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Author" class="form-label"></label>
            <textarea asp-for="Author" class="form-control" required></textarea>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Content" class="form-label"></label>
            <textarea asp-for="Content" class="form-control" rows="4" required></textarea>
        </div>

        <div class="form-group mb-3">
            <label asp-for="CreatedAt" class="form-label"></label>
            <textarea asp-for="CreatedAt" class="form-control" rows="4" required></textarea>
        </div>

        <div class="form-group mb-3">
            <label asp-for="LikeCount" class="form-label"></label>
            <textarea asp-for="LikeCount" class="form-control" rows="4" type="number" required></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Update Blog</button>
    </form>
</div>